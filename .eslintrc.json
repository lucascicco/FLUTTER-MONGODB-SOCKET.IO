{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
                {
                  "endOfLine": "auto"
                }
            ],
        "import/extensions": [
            "warning",
            "ignorePackages",
            {
                "ts": "never"
            }
        ],
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "camelcase": "off",
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern":  "next"
            }
        ]
    },          
    "settings": {
        "import/resolver": {
            "typescript" : {

            }
        }
    }
}

